<% presenter = ShoppingCartPresenter.new(products) %>
<h2 class="text-center"><%= presenter.products_in_cart %></h2>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Image</th>
      <th scope="col">Product name</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
    <% products.each do |product| %>
      <%= render partial: 'shopping_cart/product', locals: { product: product } %>
    <% end %>
  </tbody>
</table>
<div class="d-grid gap-2 col-6 mx-auto mb-5">
  <%= link_to 'Checkout', create_checkout_path, method: :post, class: 'btn btn-lg btn-outline-success' %>
</div>
