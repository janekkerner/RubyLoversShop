<tr>
  <td><%= order.id %></td>
  <td><span class="d-flex justify-content-center m-4 badge <%= bootstrap_order_status_class(order.state.to_s) %> p-2 text-white"><%= order.state %></span></td>
  <td><span class="d-flex justify-content-center m-4 badge <%= bootstrap_order_status_class(order.payment.aasm_state.to_s) %> p-2 text-white"><%= order.payment.aasm_state %></span></td>  
  <td><%= order.created_at.strftime("%T %F") %></td>
  <td><%= order.total_price %></td>
  <td><%= link_to 'show', admin_order_path(order), class: 'btn btn-info btn-outline' %></td>
</tr>
