<div class="col-sm-6">
  <div class="card mb-4" id="payment_card">
  <h4 class="card-header">Order state</h4>
    <div class="card-body">
      <h6 class='cart-title'>Current order status: <span class="badge p-2 text-white bg-<%= bootstrap_events_class(order.state.to_s) %>"><%= order.state %></span></h6>
      <div class="btn-group">
        <% order_presenter.order_permitted_events.each do |name|%>
          <%= link_to "#{name}", admin_order_path(id: order.id, event: name), method: :patch, data: {confirm: 'Are you sure?'}, class: "btn btn-outline-#{bootstrap_events_class(name.to_s)}" %>
        <% end %>
      </div>
    </div>
  </div>
</div>