<% presenter = ProductPresenter.new(product) %>
<h1>Edit product | ID: <%= product.id %></h1>
<%= form_with model: [:admin, product], local: true, method: :put do |form| %>
  <div class="form-group">
    <%= form.label :name, "Product name:" %>
    <%= form.text_field :name, class: "form-control w-50" %>
  </div>
  <div class="form-group">
    <%= form.label :price, "Price:" %>
    <%= form.text_field :price, class: "form-control w-25" %>
  </div>
  <p>Current image:</p>
  <%= image_tag presenter.image_attached, size: '200' %>
  <div class="form-group">
    <%= form.label :image, "Product image:" %>
    <%= form.file_field :image, class: "form-control w-50" %>
  </div>
  <div class="form-group">
    <%= form.label :category_id, "Category:" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { include_blank: true }, { class: "form-control w-50" } %>
  </div>
  <div class="form-group">
    <%= form.label :brand_id, "Brand:" %>
    <%= form.collection_select :brand_id, Brand.all, :id, :brand_name, { include_blank: true }, { class: "form-control w-50" } %>
  </div>
  <%= form.submit "Update product", class: 'btn btn-success' %>
<% end %>
