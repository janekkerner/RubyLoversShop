<% presenter = ProductPresenter.new(product) %>
<tr>
  <td><%= product.id %></td>
  <td><%= image_tag presenter.image_attached, size: "150" %></td>
  <td><%= product.name %></td>
  <td><%= product.price %></td>
  <td><%= presenter.show_brand %></td>
  <td><%= link_to "Delete", admin_product_path(product), method: :delete, id: "destroy-product-#{product.id}", class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
</tr>
